{
  "name": "@tsfullstack/module-loader",
  "version": "1.0.0",
  "description": "Automatic module discovery and aggregation for TsFullStack",
  "type": "module",
  "exports": {
    "./generated/backend.ts": "./generated/backend.ts",
    "./generated/frontend.ts": "./generated/frontend.ts"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "tsc": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "pnpm clean"
  },
  "bin": {
    "tsfullstack-modules": "./dist/cli.js"
  },
  "keywords": [
    "module-loader",
    "auto-discovery",
    "tsfullstack"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chokidar": "^4.0.0",
    "commander": "^12.0.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.1",
    "typescript": "^5.9.2"
  }
}
