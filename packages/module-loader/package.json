{
  "name": "@tsfullstack/module-loader",
  "version": "1.0.0",
  "description": "Automatic module discovery and aggregation for TsFullStack",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./generated/backend.ts": {
      "types": "./dist/runtime-generated/backend.d.ts",
      "default": "./dist/runtime-generated/backend.js"
    },
    "./generated/frontend.ts": {
      "types": "./dist/runtime-generated/frontend.d.ts",
      "default": "./dist/runtime-generated/frontend.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "tsc": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "pnpm clean"
  },
  "bin": {
    "tsfullstack-modules": "./dist/cli.js"
  },
  "keywords": [
    "module-loader",
    "auto-discovery",
    "tsfullstack"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chokidar": "^4.0.0",
    "commander": "^12.0.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.2.0",
    "@tsfullstack/module-template": "workspace:*"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.1",
    "typescript": "^5.9.2"
  }
}