{
  "name": "@tsfullstack/module-template",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./dist": {
      "import": "./dist/module-template.js",
      "require": "./dist/module-template.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "api",
    "frontend"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "build:api": "vite build --config vite.api.config.ts",
    "build:all": "pnpm run build && pnpm run build:api",
    "preview": "vite preview",
    "typecheck": "vue-tsc --noEmit",
    "typecheck:api": "tsc --noEmit --project tsconfig.api.json",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "vue": "^3.5.21"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "typescript": "~5.8.3",
    "vite": "npm:rolldown-vite@7.1.12",
    "vue-tsc": "^3.0.7"
  }
}
