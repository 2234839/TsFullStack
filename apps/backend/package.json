{
  "name": "@tsfullstack/backend",
  "type": "module",
  "scripts": {
    "prebuild": "zenstack generate",
    "predev": "zenstack generate",
    "zenstack:generate": "zenstack generate",
    "build": "tsup --config tsup-build.config.ts",
    "build:publish": "pnpm build:lib && pnpm --filter website-frontend build && pnpm build && pnpm publish:server",
    "publish:server": "bash ./publish.sh",
    "tsc:b": "tsc -b",
    "dev": "CHOKIDAR_USEPOLLING=true tsup --watch --onSuccess \"node --enable-source-maps ./dist/index.js\"",
    "start": "node --enable-source-maps ./dist/index.js",
    "start:w": "node --enable-source-maps --watch ./dist/index.js",
    "build:lib": "tsup --config tsup-lib.config.ts",
    "build:lib:dmap": "tsc -p tsconfig.lib.json",
    "build:lib:w": "tsup --watch --config tsup-lib.config.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build:projects": "tsx src/scripts/build-projects.ts"
  },
  "main": "./dist-lib/index.js",
  "types": "./dist-lib/index.d.ts",
  "files": [
    "dist-lib",
    "./src/lib/index.ts",
    "config.schema.json",
    "config.example.json",
    "CONFIG.md"
  ],
  "jsonSchema": {
    "config": "./config.schema.json"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/multipart": "^9.4.0",
    "@fastify/static": "^9.0.0",
    "@zenstackhq/orm": "^3.4.1",
    "@zenstackhq/plugin-policy": "^3.4.1",
    "@zenstackhq/schema": "^3.4.1",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.2",
    "crypto-js": "^4.2.0",
    "effect": "^3.19.19",
    "fastify": "^5.7.4",
    "superjson": "^2.2.6",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^25.3.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@zenstackhq/cli": "^3.4.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}